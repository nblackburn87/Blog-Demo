<%= form_for @user do |form| %>
  <div class="form-group">
    <%= form.label :email, class: "col-md-1 control-label" %>
    <div class="col-md-6">
      <%= form.text_field :email, class: "form-control" %>
    </div>
  </div><br><br>
  <div class="form-group">
    <%= form.label :password, class: "col-md-1 control-label" %>
    <div class="col-md-6">
      <%= form.password_field :password, class: "form-control" %>
    </div>
  </div><br><br>
  <div class="form-group">
    <%= form.label :password_confirmation, class: "col-md-1 control-label" %>
    <div class="col-md-6">
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div><br><br>
  <%= form.submit(class: 'btn btn-success') %>
<% end %>